<%= link_to "show all  Articles", articles_path%>
<h1>Showing the article</h1>
Title:
<br/>
<%=@article.title%>
<br/>
Description:
<br/>
<p>
<%=@article.description%>
</p>
<br/>
<h2>Add Comments </h2>
<%= simple_form_for [@article, @article.comments.build] do |form| %>
    <%= form.input :commenter %><br>
    <%= form.input :body %><br>
    <%= form.submit%>
    <%end%>

    <h3> Comments </h3>
    <% if @article.comments.count>0 %>
<% @article.comments.each do |c| %>
<% if c.id!=nil%>
    <p>
    <strong>Commenter:</strong>
     <%= c.commenter%></p>
     <P>
     <strong>Body:</strong> <%= c.body%></p>
    <%end%>
<%end%>
<%end%>
